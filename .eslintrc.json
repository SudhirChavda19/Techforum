{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["prettify.js", "lang-css.js", "linenumber.js", "test.spec.js"],
    "rules": {
        "no-underscore-dangle":"off",
        "no-useless-escape":"off",
        "func-names":"off",
        "new-cap":"off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
